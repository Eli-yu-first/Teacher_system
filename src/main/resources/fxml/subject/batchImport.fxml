<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane fx:id="container" prefHeight="400.0" prefWidth="800.0"
            style="-fx-background-color: #FFF;-fx-border-width: 0"
            xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml" fx:controller="com.hnust.controller.subject.BatchImportController">
    <ScrollPane fitToWidth="true" fitToHeight="true" AnchorPane.bottomAnchor="0" AnchorPane.topAnchor="0"
    AnchorPane.rightAnchor="0" AnchorPane.leftAnchor="0"
    style="-fx-background-color: transparent">
        <AnchorPane style="-fx-background-color: #ffffff">
            <VBox alignment="CENTER_LEFT" spacing="20"
                  style="-fx-background-color: #EBFFFE;"
                  AnchorPane.leftAnchor="25" AnchorPane.rightAnchor="25" AnchorPane.topAnchor="25">
                <Label text="    导入说明" />
                <Label text="    1，本系统支持导入的题型" />
                <Label text="    单选题，多选题，不定项选择题，填空题，判断题，问答题，理解题（一个大标题下有多个小问题），排序题，匹配题，完型填空题" />
                <Label text="    2，导入题目的word文档必须按照模板要求来进行填写" />
                <padding>
                    <Insets top="15.0" left="10" right="10" bottom="15"/>
                </padding>
            </VBox>
            <HBox alignment="CENTER" spacing="35" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0"
                  AnchorPane.topAnchor="200">
                <Label style="-fx-font-size: 1em" text="题目所属课程" />
                <ComboBox fx:id="comb" visibleRowCount="5" minWidth="150"/>
                <Button fx:id="download" style="-fx-font-size: 1em" styleClass="btn,btn-info" text="下载Word文档" />
                <Button fx:id="upload" style="-fx-font-size: 1em" styleClass="btn,btn-success" text="上传Word文档" />
                <Button fx:id="getImport" style="-fx-font-size: 1em" styleClass="btn,btn-info" text="确认导入"/>
            </HBox>

            <VBox AnchorPane.topAnchor="250" AnchorPane.rightAnchor="0" AnchorPane.leftAnchor="0">
                <padding>
                    <Insets top="10" left="10" right="10" bottom="10"/>
                </padding>
                <ScrollPane fitToHeight="true" style="-fx-background-color: transparent">
                    <TableView style="-fx-background-color: transparent"
                               fx:id="tableSize"  minHeight="300">
                        <columns>
                            <TableColumn text="内容" minWidth="80"/>
                            <TableColumn text="所属课程" minWidth="100"/>
                            <TableColumn text="所属章节" minWidth="100"/>
                            <TableColumn text="题目类型" minWidth="100"/>
                            <TableColumn text="题目难度" minWidth="100"/>
                            <TableColumn text="题目解析" minWidth="100"/>
                            <TableColumn text="知识点" minWidth="90"/>
                            <TableColumn text="答案" minWidth="80"/>
                            <TableColumn text="课程目标" minWidth="100"/>
                            <TableColumn text="操作" minWidth="80"/>
                        </columns>
                    </TableView>
                </ScrollPane>
                <HBox alignment="CENTER" spacing="10">
                    <Pagination style="-fx-font-size: 1em"/>
                </HBox>
            </VBox>
        </AnchorPane>
    </ScrollPane>
</AnchorPane>
