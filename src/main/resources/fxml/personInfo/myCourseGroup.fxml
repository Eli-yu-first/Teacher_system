<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="499.0"
            prefWidth="774.0"
            xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.hnust.controller.personInfo.MyCourseGroupController">
    <ScrollPane AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0"
                AnchorPane.topAnchor="0" AnchorPane.bottomAnchor="0"
                style="-fx-background-color: transparent" fitToHeight="true" fitToWidth="true">
        <AnchorPane style="-fx-background-color: #ffffff">
            <HBox AnchorPane.topAnchor="25" spacing="80" alignment="CENTER"
            AnchorPane.rightAnchor="10" AnchorPane.leftAnchor="10">
                <HBox spacing="15" alignment="CENTER">
                    <Label style="-fx-font-size: 1.1em;" text="组长教工号：886534"/>
                    <Label style="-fx-font-size: 1.1em;" text="组长姓名：张三"/>
                </HBox>
                <HBox spacing="15" alignment="CENTER">
                    <Button styleClass="btn,btn-default" style="-fx-background-color: transparent" onAction="#ToSubjectList" text="查看题库" />
                    <Button styleClass="btn,btn-info" text="课程组指标点"/>
                    <Button  styleClass="btn,btn-danger" text="退出课程组" />
                </HBox>
            </HBox>

            <HBox style="-fx-border-width: 0 0 1 0;-fx-border-style: solid;-fx-border-color:  #b2b2b2"
                AnchorPane.rightAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.topAnchor="75" />

            <HBox AnchorPane.topAnchor="95" spacing="25" alignment="CENTER"
                  AnchorPane.leftAnchor="10" AnchorPane.rightAnchor="10">
                <HBox spacing="15" alignment="CENTER">
                    <Label style="-fx-font-size: 1.1em;" text="课程组" />
                    <ComboBox prefWidth="180" fx:id="courseGroup"/>
                    <Label style="-fx-font-size: 1.1em;" text="组成员搜索" />
                    <TextField />
                </HBox>
                <HBox spacing="15" alignment="CENTER">
                    <Button styleClass="btn,btn-info" text="搜索" />
                    <Button  styleClass="btn,btn-default" text="重置" style="-fx-background-color: transparent"/>
                </HBox>
            </HBox>
            <VBox AnchorPane.topAnchor="140" AnchorPane.rightAnchor="0" AnchorPane.leftAnchor="0">
                <padding>
                    <Insets top="10" left="10" right="10" bottom="10"/>
                </padding>
                <TableView style="-fx-background-color: transparent"
                           fx:id="tableSize"  minHeight="300" minWidth="500">
                    <columns>
                        <TableColumn text="序号" />
                        <TableColumn text="教工号"/>
                        <TableColumn text="姓名"/>
                        <TableColumn text="电话"/>
                    </columns>
                </TableView>
                <HBox alignment="CENTER" spacing="10">
                    <Pagination style="-fx-font-size: 1em"/>
                </HBox>
            </VBox>
        </AnchorPane>
    </ScrollPane>
</AnchorPane>
