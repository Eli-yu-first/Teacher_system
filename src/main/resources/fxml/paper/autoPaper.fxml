            <HBox styleClass="ball02">
                <Label styleClass="ball_text02" text="2">
                    <HBox.margin>
                        <Insets top="18" left="22"></Insets>
                    </HBox.margin>
                </Label>
            </HBox>
            <AnchorPane>
                <Label text="步骤二" AnchorPane.topAnchor="15" styleClass="steps_bg"></Label>
                <Label text="设置试卷题目信息" AnchorPane.topAnchor="40" styleClass="step_sm"></Label>
                <HBox  AnchorPane.topAnchor="25" AnchorPane.rightAnchor="0" AnchorPane.leftAnchor="70" styleClass="hline"/>
            </AnchorPane>
            <HBox styleClass="ball02">
                <Label styleClass="ball_text02" text="3">
                    <HBox.margin>
                        <Insets top="18" left="22"></Insets>
                    </HBox.margin>
                </Label>
            </HBox>
            <AnchorPane>
                <Label text="步骤三" AnchorPane.topAnchor="15" styleClass="steps_bg"></Label>
                <Label text="查看试卷" AnchorPane.topAnchor="40" styleClass="step_sm"></Label>
                <HBox  AnchorPane.topAnchor="25" AnchorPane.rightAnchor="0" AnchorPane.leftAnchor="70" styleClass="hline"/>
            </AnchorPane>
            <HBox styleClass="ball02">
                <Label styleClass="ball_text02" text="4">
                    <HBox.margin>
                        <Insets top="18" left="22"></Insets>
                    </HBox.margin>
                </Label>
            </HBox>
            <AnchorPane>
                <Label text="步骤四" AnchorPane.topAnchor="15" styleClass="steps_bg"></Label>
