            <HBox>
                <padding>
                    <Insets top="30"/>
                </padding>
                <Label text="命题教师： " style="-fx-font-size: 1.2em;" />
                <TextField text="李四" style="-fx-end-margin: 40" styleClass="text-area"></TextField>
            </HBox>

            <HBox>
                <padding>
                    <Insets top="30"/>
                </padding>
                <Label text="课程编号： " style="-fx-font-size: 1.2em;" />
                <TextField style="-fx-end-margin: 40"></TextField>
            </HBox>

            <HBox>
                <padding>
                    <Insets top="30"/>
                </padding>
                <Label text="考试时间： " style="-fx-font-size: 1.2em;" />
                <TextField style="-fx-end-margin: 40"></TextField>
            </HBox>

            <HBox>
                <padding>
                    <Insets top="30"/>
                </padding>
                <Label text="命题日期： " style="-fx-font-size: 1.2em;" />
                <TextField style="-fx-end-margin: 40"></TextField>
            </HBox>

        </VBox>

</AnchorPane>

