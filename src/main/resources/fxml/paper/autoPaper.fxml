            </AnchorPane>
        </HBox>

        <HBox AnchorPane.topAnchor="130" AnchorPane.rightAnchor="150" spacing="50" alignment="CENTER">
            <RadioButton fx:id="r1" style="-fx-font-size: 1.2em">A卷</RadioButton>
            <RadioButton fx:id="r2" style="-fx-font-size: 1.2em">B卷</RadioButton>
            <Button text="下一步" styleClass="btn,btn-primary" onAction="#toAuto2"  fx:id="btn"/>
        </HBox>

        <VBox alignment="CENTER" spacing="10" AnchorPane.topAnchor="180" AnchorPane.leftAnchor="130">
            <HBox>
                <padding>
                    <Insets top="30"/>
                </padding>
                <Label text="开课单位： " style="-fx-font-size: 1.2em;" />
                <TextField text="计算机科学与工程学院" style="-fx-end-margin: 40" styleClass="text-area"></TextField>
            </HBox>

            <HBox>
                <padding>
                    <Insets top="30"/>
                </padding>
                <Label text="课程： " style="-fx-font-size: 1.2em;" />
                <ComboBox prefWidth="230" fx:id="comboBox" styleClass="combo-box">
                    <HBox.margin>
                        <Insets right="50.0" />
                    </HBox.margin>
                </ComboBox>
            </HBox>

            <HBox>
                <padding>
                    <Insets top="30"/>
                </padding>
                <Label text="考试年级及专业： " style="-fx-font-size: 1.2em;" />
